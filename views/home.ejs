                  <input type="text" id="downloadurl" value="<%= downloadUrl %>" class="form-control"
                    placeholder="download url" aria-label="download url" aria-describedby="my-button-addon">
                  <button class="btn btn-secondary" type="button" id="my-button-addon">ðŸ“‘</button>
                </div>
              </div>
              <% } %>
